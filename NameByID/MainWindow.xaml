<Window x:Class="NameByID.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NameByID"
        mc:Ignorable="d"
        Title="NameByID" Height="500" Width="450.">
    <Grid Margin="-1,0,1,0" Background="LightGray">
        <ListBox x:Name="NbtstatResult" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10,75,10,10"/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <TextBox x:Name="IdTextBox" TextAlignment="Center" HorizontalAlignment="Left" Height="32" Margin="50,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontWeight="Bold" FontSize="24"/>
        <Button x:Name="SearchButton" Background="White" Content="Search" HorizontalAlignment="Left" Margin="190,24,0,0" VerticalAlignment="Top" Width="75" Height="30" FontSize="18" Click="SearchButton_Click"/>
        <ProgressBar x:Name="SearchProgressBar" HorizontalAlignment="Stretch" Height="27" Margin="286,25,10,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
